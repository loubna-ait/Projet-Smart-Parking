<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ma.emsi.entities">
    <class name="Reservation" table="Reservation">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="dateCreation" column="date_creation" type="timestamp"/>
        <property name="dateDebut" column="date_debut" type="timestamp" not-null="true"/>
        <property name="dateFin" column="date_fin" type="timestamp" not-null="true"/>
        <property name="coutEstime" column="cout_estime"/>
        <property name="statut" column="statut"/>

        <many-to-one name="conducteur" class="Utilisateur" column="conducteur_id" not-null="true"/>
        <many-to-one name="place" class="PlaceStationnement" column="place_id" not-null="true"/>
    </class>
</hibernate-mapping>
